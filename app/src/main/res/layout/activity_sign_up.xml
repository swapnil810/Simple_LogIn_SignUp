<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".activity.SignUpActivity">


    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your first name."
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_first_name"
        android:layout_marginTop="30dp"
        android:hint="Enter your last name"
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_last_name"
        android:layout_marginTop="30dp"
        android:hint="Enter your email."
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_marginTop="30dp"
        android:hint="Enter your role."
        android:textColor="#000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_role"
        android:layout_marginTop="30dp"
        android:hint="Enter your password."
        android:textColor="#000"
        android:textSize="20dp" />



    <EditText
        android:id="@+id/et_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pass"
        android:layout_marginTop="30dp"
        android:hint="Enter your password confirmation."
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_below="@+id/et_password_confirmation"
        android:layout_width="wrap_content"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>